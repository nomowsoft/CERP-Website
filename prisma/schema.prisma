generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum DomainType {
  SUBDOMAIN
  CUSTOM_DOMAIN
}

enum PaymentMethod {
  ONLINE
  BANK
}
enum Status {
  DRAFT
  PROGRES
  DONE
  CANCEL
}

enum PackageType {
  STARTER
  BUSINESS
  ENTERPRISE
}

model User {
  id            Int            @id @default(autoincrement())
  email         String?        @unique
  password      String
  name          String?
  charityName   String?
  phone         String?        @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  role          Role           @default(ADMIN)
  subscriptions Subscription[]
}

model Subscription {
  id       Int    @id @default(autoincrement())
  userId   Int
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  fullName String
  email    String
  phone    String

  charityRegisterNo String
  licenseFile       String

  domainType DomainType
  domainName String?

  paymentMethod PaymentMethod

  cardNumber     String?
  cardHolderName String?
  cardExpiryDate String?
  cardCVV        String?

  bankReceipt String?
  status Status

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Package {
  id          Int              @id @default(autoincrement())
  image       String
  name        String
  name_en     String   @default("")
  name_ar     String   @default("")
  type        PackageType
  description String
  description_en String @default("")
  description_ar String @default("")
  features    PackageFeature[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model PackageFeature {
  id        Int     @id @default(autoincrement())
  text      String
  text_en   String  @default("")
  text_ar   String  @default("")
  packageId Int
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
}

model Service {
  id          Int           @id @default(autoincrement())
  image       String
  name        String
  name_en     String   @default("")
  name_ar     String   @default("")
  description String
  description_en String @default("")
  description_ar String @default("")
  contents    ServiceType[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model ServiceType {
  id        Int     @id @default(autoincrement())
  name      String
  name_en   String @default("")
  name_ar   String @default("")
  serviceId Int
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}
